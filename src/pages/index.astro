---
import Layout from "../layouts/Layout.astro";
import AllContests from "../components/AllContests.astro";
---

<Layout title="Contest | Gean Dev">
  <main class="flex flex-col justify-center items-center text-white w-full">
    <div class="mt-5 w-full">
      <div class="flex justify-center w-full">
        <h1 class="text-8xl font-bold text-white mt-5 hidden lg:flex">
          Gean Dev Contests
        </h1>
        <div class="flex lg:hidden flex-col w-full text-center">
          <h1 class="text-6xl text-white font-bold">Gean Dev</h1>
          <h1 class="text-6xl text-white font-bold">Contests</h1>
        </div>
      </div>
    </div>
    <div class="flex justify-center w-full">
      <div class="w-3/4 lg:w-3/4 md:w-1/2">
        <AllContests />
      </div>
    </div>
    <div class="my-5">
      <p class="text-xl">
        Made with ❤️ by <a href="https://github.com/gean-dev">Gean Dev</a>
      </p>
    </div>
  </main>
</Layout>
